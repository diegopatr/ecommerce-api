# Get all products
GET localhost:3000/products
Content-Type: application/json

###

# Get a single product by ID
GET localhost:3000/products/1
Content-Type: application/json

###

# Create a new product
POST localhost:3000/products
Content-Type: application/json

{
  "product_name": "New Smartphone Gamma",
  "product_description": "Latest model of Smartphone Gamma",
  "product_price": "1999.99",
  "category_id": 3,
  "brand_id": 1
}

###

# Update an existing product by ID
PUT localhost:3000/products/1
Content-Type: application/json

{
  "product_name": "Updated Product",
  "product_price": 450
}

###

# Partially update an existing product by ID
PATCH localhost:3000/products/1
Content-Type: application/json

{
  "product_price": 500
}

###

# Delete a product by ID
DELETE localhost:3000/products/1
Content-Type: application/json